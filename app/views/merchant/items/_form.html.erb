<%= form_for [:merchant, @item], url: @url do |f| %>
  <%= f.label :name %>
  <br>
  <%= f.text_field :name %>
  <br>
  <%= f.label :description %>
  <br>
  <%= f.text_area :description %>
  <br>
  <%= f.label :img_url %>
  <br>
  <%= f.text_field :img_url %>
  <br>
  <%= f.label :price %>
  <br>
  <%= f.number_field :price, min: "0.01", step: ".01", placeholder: ".01" %>
  <br>
  <%= f.label :inventory_count %>
  <br>
  <%= f.number_field :inventory_count, min: '1' %>
  <br>
  <%= f.submit %>
<% end  %>
