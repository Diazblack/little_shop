
<div class="all_stuff">
  <% card_data.each do |card| %>
    <div id="card<%= card.id %>" class="card">

      <% if card.class == Item %>
        <div class="img_url">
          <%= link_to <img src="<%= card.img_url %>" alt="item_img">, item_path(card) %>   
        </div>
        <div class="card_info">
          <%= link_to "#{card.name}", item_path(card) %>
          <img src="<%= card.img_url %>" alt="item_img">
          <%= card.merchant.name %>
          <%= card.inventory_count %>
          <%= card.price %>

          <% if current_admin? %>
            <%=link_to card.name, admin_merchant_path(card)%>
            <% if card.active? %>
              <%=button_to 'Disable', { controller: 'admin/merchants',
                                        action: 'update',
                                        attribute: 'active',
                                        id: card.id },
                                        method: :patch,
                                        data: { confirm: 'Are you sure?' } %>
            <% else %>
              <%= button_to 'Enable', { controller: 'admin/merchants',
                                        action: 'update',
                                        attribute: 'active',
                                        id: card.id },
                                        method: :patch,
                                        data: { confirm: 'Are you sure?' } %>
            <% end %>
          <% else %>
            <%= card.name%>
          <% end %>
        </div>

      <% elsif card.class == User %>
        <div class="img_url">
          <%=image_tag(card.img_url) %>
        </div>
        <div class="card_info">
          <% if current_admin? %>
            <%=link_to card.name, admin_merchant_path(card)%>
            <% if card.active? %>
              <%=button_to 'Disable', { controller: 'admin/merchants',
                                        action: 'update',
                                        attribute: 'active',
                                        id: card.id },
                                        method: :patch,
                                        data: { confirm: 'Are you sure?' } %>
            <% else %>
              <%= button_to 'Enable', { controller: 'admin/merchants',
                                        action: 'update',
                                        attribute: 'active',
                                        id: card.id },
                                        method: :patch,
                                        data: { confirm: 'Are you sure?' } %>
            <% end %>
          <% else %>
            <%= card.name%>
          <% end %>
        </div>
    <% end %>
    </div>
  <%end%>
</div>
