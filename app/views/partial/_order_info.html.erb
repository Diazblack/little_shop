<div class="order_container" id="order-<%= @order.id %>-info">
  <ul>
    <li><%=link_to "Order #{@order.id}", profile_order_path(@order) %></li>
    <li><%= "Date ordered: #{@order.created_at.strftime("%m-%d-%Y")}" %></li>
    <li><%= "Last updated: #{@order.updated_at.strftime("%m-%d-%Y")}" %></li>
    <li><%= "Order Size: #{@order.unit_quantity} units" %></li>
    <li><%= "Total: #{number_to_currency(@order.grand_total)}" %></li>
    <li><%= "Order status: #{@order.status}" %></li>
    <% if @order.pending? %>
      <% if current_admin? %>
        <%= button_to "Cancel Order", admin_order_cancel_path(@order), method: "patch" %>
      <% elsif current_merchant? %>
        <%= button_to "Cancel Order", merchant_order_cancel_path(@order), method: "patch" %>
      <% else %>
        <%= button_to "Cancel Order", profile_order_cancel_path(@order), method: "patch" %>
      <% end  %>
    <% end %>
  </ul>
</div>
